<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <i class="fa-solid fa-guitar fa-2xl"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <div class="row justify-content-center">
            <div class="col-sm-15 my-10">
              <%= form_with url: instruments_path, method: :get, class: "d-flex" do %>
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "find your instrument!"
                %>
                <%= submit_tag "search", name: "", class: "btn-primary:hover" %>
              <% end %>
            </div>
          </div>
          <li class="nav-item dropdown">
          <%= link_to ":mag_right: Search instruments", instruments_path, class: "nav-link border align-items: right"%>
            <% if current_user.photo.attached? %>
              <%=cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
              <% else %>
              <img src="https://gopostr.s3.amazonaws.com/favicon_url/bvnowNkxrBEJWo1QyPAeSz0vDNa8hajfTgPKTP7m.png" class="avatar" alt="dropdown menu">
            <% end %>

            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", dashboard_path, class: "dropdown-item" %>
              <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "| Login :wave: ", new_user_session_path, class: "nav-link" %>
          </li>

           <li class="nav-item">
            <%= link_to " Register :black_nib: |", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
