<div class="container my-4">
  <div class="row d-flex justify-content-center">
    <div class="col-6 bg-white p-4 shadow" data-controller="datepicker" data-notavailable="<%= @instrument.not_available %>">
        <%= simple_form_for [@instrument, @booking] do |f| %>
          <%= f.input :pick_up_date, as: :string, input_html: { data: { datepicker_target:"pickup" } }, label: "Pick up day" %>
          <%= f.input :drop_off_date, as: :string, input_html: { data: { datepicker_target:"dropoff" } }, label: "Return day" %>
          <%= f.button :submit, "Create Booking", class: "btn btn-outline-danger" %>
        <% end %>
    </div>
  </div>
</div>
