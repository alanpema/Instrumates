<%= turbo_frame_tag "edit_instrument" do %>
  <div class="container my-4">
    <div class="row d-flex justify-content-center">
      <div class="col-6 bg-white p-4 shadow">
          <%= simple_form_for(@instrument) do |f| %>
          <%= f.input :name %>
          <%= f.input :condition %>
          <%= f.input :price %>
          <%= f.input :category, label:"Type" %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: "btn btn-outline-danger" %>
  <% end %>
      </div>
    </div>
  </div>
<% end %>
